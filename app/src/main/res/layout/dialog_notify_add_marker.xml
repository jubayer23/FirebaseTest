<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="11">


    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/blue_deep_light"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3.5">


        <TextView
            android:id="@+id/tv_dialog_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Do you want to add this icon to the map?"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/img_icon"
            android:src="@drawable/icon_1"/>

        <TextView
            android:id="@+id/tv_icon_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/gray_light"
            android:text="Do you want to add this icon to the map"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                style="@style/btnErrorOrLogoutLarge"
                android:text="Cancel"
                android:layout_marginRight="5dp"
                android:id="@+id/btn_cancel"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                style="@style/btnSubmitOrDoneLarge"
                android:text="Add"
                android:id="@+id/btn_add"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>